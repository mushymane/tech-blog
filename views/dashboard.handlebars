<div class="row">
    <div class="col">
        <h2>Welcome, {{ username }}.</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="new-post">
            <a class="btn btn-success" href="/dashboard/new" role="button">Create a new post</a>
        </div>

        {{#if posts.length}}
        <div class="col-md-6 post-list">
            <h3>My Posts</h3>
            {{#each posts as |post|}}
            <div class="row mb-2">
                <div class="col-md-8">
                    <h4><a href="/dashboard/edit/{{post.id}}">{{post.title}}</a><span>{{format_date post.date_created}}</span></h4>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</div>

<script src="./js/dashboard.js"></script>